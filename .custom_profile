#================================================
#       Begin Default Scripts
#================================================
export PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h:\[\033[01;34m\]\w\[\033[00m\]\n\$ '
export LS_COLORS=$LS_COLORS:'di=1;33:ln=36'
export BASH_SILENCE_DEPRECATION_WARNING=1 # supress zsh warning
alias ls='ls --color=auto'

#================================================
#       Useful Aliases
#================================================
alias profile='source ~/.custom_profile'
alias acp='git add .; if [[ -z $1 ]]; then git commit; else	git commit; fi; git push'
alias gs='git status'
alias gc='if [[ -z $1 ]]; then git commit; else git commit -m "$1"; fi'
alias gp='git pull'
alias lg='git lg'
alias server='ssh artifexium@192.168.1.143'
alias aws='ssh -i "/c/Projects/AWS/ec2-admin-ssh.pem" ubuntu@ec2-174-129-60-139.compute-1.amazonaws.com'
alias pi='ssh pi@192.168.1.127'
alias l='ls -l'
alias a='ls -a'
alias la='ls -la'


#================================================
#       Import Custom Profile
#================================================
config=$(hostname)

source ~/.GoodScripts/$config/custom_profile
